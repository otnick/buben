generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Team {
  id         String      @id @default(cuid())
  name       String 
  password   String
  points     Int         @default(0)
  members    Member[]
  challenges Challenge[]
  logo       String?
  car        String?
  captain    String?    
}

model Member {
  id         String      @id @default(cuid())
  name       String
  password   String
  teamId     String?     // Optional, und kann auch null sein
  team       Team?       @relation(fields: [teamId], references: [id])
  challenges Challenge[]
}

model Challenge {
  id        String  @id @default(cuid())
  title     String
  description String
  completed Boolean @default(false)
  points    Int
  teamId    String
  team      Team    @relation(fields: [teamId], references: [id])
  memberId  String?
  member    Member? @relation(fields: [memberId], references: [id])
  media       Media[]
}

model Media {
  id          String    @id @default(cuid())
  url         String    // z.â€¯B. Pfad, Base64 oder extern
  challengeId String
  challenge   Challenge @relation(fields: [challengeId], references: [id])
}